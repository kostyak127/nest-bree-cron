{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "types": ["lodash", "node"],
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["./*"]
    }
  },
  "include": ["src/**/*", ".eslintrc.js"],
  "exclude": ["node_modules"]
}
